{
  "version": 3,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "index.js",
      "methods": ["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS"]
    }
  ],
  "crons": [
    {
      "path": "/api/send-reminders",
      "schedule": "0 11 10 * *"
    },
    {
      "path": "/api/send-reminders",
      "schedule": "0 11 20 * *"
    },
    {
      "path": "/api/send-reminders",
      "schedule": "0 11 29 * *"
    }
  ]
}
